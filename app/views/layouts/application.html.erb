<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <title>Hist-Post</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">



  </head>

  <body>
    <header class="navbar">
      <div class="container">
        <div class="row">
          <nav class="nav navbar-nav navbar-left">
            <%= link_to "Hist-Post", root_path, class: "logo", style: "text-decoration: none;" %>
          </nav>
          
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to ' ホーム', root_path, class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to ' マイページ', user_path(current_user), class: "glyphicon glyphicon-user" %></li>
              <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
            <% else %>
              <li><%= link_to ' ホーム', root_path, class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to ' ログイン', new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
              <li><%= link_to ' 新規登録', new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
