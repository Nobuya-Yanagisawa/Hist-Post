<div class="container">
	<div class="row">
	<div class="col-md-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>メールアドレス</th>
					<th>ユーザー名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.email %></td>
						<td><%= user.user_name %></td>
						<td><%= link_to "Destroy", user_path(user), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	</div>
</div>